<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="left|top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="83dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:background="@android:color/holo_green_light"
        android:text="green"
        android:textSize="50px"
        android:textColor="#000000"
        android:id="@+id/color_press_game_widget_color_green"/>
    <TextView
        android:layout_width="83dp"
        android:layout_height="70dp"
        android:layout_marginLeft="83.7dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:text="blue"
        android:textSize="50px"
        android:textColor="#000000"
        android:id="@+id/color_press_game_widget_color_blue"/>
    <TextView
        android:layout_width="83dp"
        android:layout_height="70dp"
        android:layout_marginTop="70.7dp"
        android:gravity="center"
        android:background="@android:color/holo_red_light"
        android:text="red"
        android:textSize="50px"
        android:textColor="#000000"
        android:id="@+id/color_press_game_widget_color_red"/>
    <TextView
        android:layout_width="83dp"
        android:layout_height="70dp"
        android:layout_marginLeft="83.7dp"
        android:layout_marginTop="70.7dp"
        android:gravity="center"
        android:background="@android:color/holo_purple"
        android:text="purple"
        android:textSize="50px"
        android:textColor="#000000"
        android:id="@+id/color_press_game_widget_color_purple"/>
     <TextView
        android:layout_width="167dp"
        android:layout_height="69dp"
        android:layout_marginTop="142dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:text="white"
        android:textSize="50px"
        android:textColor="#000000"
        android:id="@+id/color_press_game_widget_color_white"/>
</RelativeLayout>
