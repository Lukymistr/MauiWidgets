<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    >

    <Button
        android:layout_width="72dp"
        android:layout_height="50dp" 
        android:text="on"
        android:id="@+id/light_bulb_buttons_widget_on"
        />
    <Button
        android:layout_width="72dp"
        android:layout_height="50dp" 
        android:text="off"
        android:id="@+id/light_bulb_buttons_widget_off"
        />
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_rowSpan="2"
        android:columnCount="1"
        android:rowCount="1"
        android:background="@android:color/darker_gray"
        >

        <ImageView
            android:gravity="right"
            android:layout_width="80dp"
            android:layout_height="80dp" 
            android:layout_margin="5dp"
            android:src="@drawable/light_bulb_buttons_and_switch_widget_image_off"
            android:id="@+id/light_bulb_buttons_widget_light_bulb"
            />

        </LinearLayout>

</GridLayout>